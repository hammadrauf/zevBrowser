<Page x:Class="zevBrowserXaml.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:zevBrowserXaml"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer>
        <Grid>
            <!-- Define flexible rows and columns -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Button: Zone-Minder Folder -->
            <Button x:Name="btnFolder" Content="Zone-Minder Folder" Grid.Row="0" Grid.Column="0" 
              Click="onClick_btnFolder" HorizontalAlignment="Left" Margin="5" />

            <!-- TextBox: Read-Only -->
            <TextBox x:Name="txtFolder" Grid.Row="0" Grid.Column="1" IsReadOnly="True" 
               VerticalAlignment="Center" Margin="5" />

            <!-- ComboBox -->
            <ComboBox x:Name="cmbCamera" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                Margin="5" />

            <!-- CheckBox List -->
            <StackPanel x:Name="clbDateFolders" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                  Orientation="Vertical" Margin="5">
                <CheckBox Content="Option 1" />
                <CheckBox Content="Option 2" />
                <CheckBox Content="Option 3" />
            </StackPanel>

            <!-- Button: Check All -->
            <Button x:Name="btnCheckAll" Content="Check All" Grid.Row="3" Grid.Column="0" 
              HorizontalAlignment="Left" Margin="5" />

            <!-- Button: Uncheck All -->
            <Button x:Name="btnUncheckAll" Content="Uncheck All" Grid.Row="3" Grid.Column="1" 
              HorizontalAlignment="Left" Margin="5" />

            <!-- Button: Settings -->
            <Button x:Name="btnSettings" Content="Settings" Grid.Row="4" Grid.Column="0" 
              HorizontalAlignment="Left" Margin="5" />

            <!-- NumericUpDown: Start -->
            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" Margin="5">
                <TextBlock Text="Start:" VerticalAlignment="Center" Margin="0,0,5,0" />
                <TextBox x:Name="numStart" Width="50" VerticalAlignment="Center" />
            </StackPanel>

            <!-- NumericUpDown: End -->
            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="0" Margin="5">
                <TextBlock Text="End:" VerticalAlignment="Center" Margin="0,0,5,0" />
                <TextBox x:Name="numEnd" Width="50" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Button: Generate Thumbnails -->
            <Button x:Name="btnGenerateThumbnails" Content="Generate Thumbnails" Grid.Row="5" Grid.Column="1" 
              HorizontalAlignment="Left" Margin="5" />
        </Grid>
    </ScrollViewer>
</Page>
